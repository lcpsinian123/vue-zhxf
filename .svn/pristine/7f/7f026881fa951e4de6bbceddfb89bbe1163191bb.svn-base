@charset "UTF-8";

//-----------------------------------------------------	
// common.less, 全局通用样式
//-----------------------------------------------------	
.page-bg-gray {
  position: relative;
  height: 100%;
  width: 100%;
  background-color: @colorF;
}

.top{
  margin-top: 10px;
}
.listshow{
  width: 100%;
  height: 30px;
  font-size: 14px;
  line-height: 30px;
  text-align: center;
  background: rgba(35,119,233,0.14);
}
.scroll-content {
//自定义滚动 间隔时间和方向
position: relative;
transition: top 0.825s; //向上移动
}
.body {
width: 100%;
height: 300px;
overflow-y: hidden;
//   position: absolute;

}
.huadongdiv{
  width: 100%;
  height: 30px;
  font-size: 14px;
  line-height: 30px;
  text-align: center;
}
.huadongdiv:nth-child(even){
  background: rgba(35,119,233,0.14);
}

.sousuo{
  width: 100%;
  height: 100px;
  background: #fff;
  // border: 1px solid #e8eaec;
  border-top:0px;
  display: flex;
  align-items: center;
  
.pgzt{
  width: 300px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 10px;
  span{
      width: 100px;
  }
}
.pgsj{
  padding-left: 24px;
}
.btn{
  padding-left: 24px;
}
}
.btnclass{
  line-height: 80px;
  button{
      width: 88px;
      margin-left: 20px;
  }
}
.tablediv{
  margin-top: 20px;
  background:#fff;
  min-height: 73%;
}

.coldiv{
  display: flex;
  justify-content: center;
  align-items: center;
  span{
      width: 140px;
  }
  input{
      width: 200px;
  }
}
.addDraw {
padding: 10px 0;

}
.abs-zone{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  background: rgba(255,255,255,.8);
  z-index: 1;
  .box{
      position:absolute;
      width: 100%;
      top:50%;
      left: 0;
      margin-top: 10px;
      text-align: center;
  }
}
.paging{
  float:right;
  margin-top:10px;
}
.ivu-table th {
  height: 40px;
  white-space: nowrap;
  overflow: hidden;
  background-color: #f2f7fd;
  // color: #fff;
}
.ivu-table-stripe .ivu-table-body tr:nth-child(2n) td, .ivu-table-stripe .ivu-table-fixed-body tr:nth-child(2n) td {
  background-color: #f3f8fe;
}
.addheader {
  background: #394959;
  height: 40px;
  line-height: 40px;
  color: #fff;
  padding-left: 30px;
}
.sousuo1{
  background: #fff;
  box-shadow: 0px 2px 6px -2px; 

  margin-top:20px;

}
.sousuo2{
  background: #fff;
  box-shadow: 0px 2px 6px -2px; 

}
.cententpadding{
  padding: 10px 20px;
}
.modediv{
  width: 100%;

  height:235px;
  .modetitle{
      width: 100%;
      display: flex;
      align-items: center;
      .titlelogo{
          width:4px;
          height:18px;
          background:rgb(60, 143, 255);
          margin-top: 5px;
          margin-left: 10px;
      }
      .titlename{
          color:rgb(60, 143, 255); 
           margin-left: 10px;
           margin-top: 7px;
           font-size:15px;
           font-weight:400;
      }
  }
}
.echartsdiv{
  width:100%;
  height: 210px;
}
.rollScreen_container {
  display: inline-block;
  position: relative;
  overflow: hidden;
}
.rollScreen_list {
  transition: 1s linear;
  padding: 0;
  margin: 0;
  list-style: none;
}
.rollScreen_list_unanim {
  transition: none;
}
.rollScreen_once {
  list-style: none;
}
